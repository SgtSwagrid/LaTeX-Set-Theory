\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{collections-colours}[2025/08/21 Collections (Colours)]

\RequirePackage[dvipsnames]{xcolor}

\let \col \textcolor

% Text
\colorlet {text} {Black}
\colorlet {quote} {darkgray}

% Collections
\colorlet {collection} {YellowGreen}
\colorlet {domain} {Orange}
\colorlet {array} {Blue!70!Black}

% Graphs
\colorlet {graph} {JungleGreen}
\colorlet {vertex} {BrickRed}
\colorlet {edge} {NavyBlue}

% Functions
\colorlet {function} {Periwinkle!70}
\colorlet {aux} {Gray}